<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e60c1d24"
    tools:context="n.headsup.StarterActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/logod"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" ولا كلمة"
        android:id="@+id/Title"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="48dp"
        android:textColor="#faffffff"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:text="© 2016 Norah Alsabti,Nora alshaalan, Nouf Almoajel, sara Alsweed and Sara Alhussayen. All Rights Reserved."
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#c8ffffff"
        android:textSize="12dp" />
</RelativeLayout>
